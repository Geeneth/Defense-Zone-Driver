---
// Main page for the game
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DEFENSE ZONE</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      font-family: 'Courier New', monospace;
      color: #ffffff;
      overflow: hidden;
    }

    #game-container {
      border: 4px solid #4ecdc4;
      box-shadow: 
        0 0 20px rgba(78, 205, 196, 0.3),
        0 0 40px rgba(78, 205, 196, 0.2),
        inset 0 0 20px rgba(0, 0, 0, 0.5);
      border-radius: 4px;
      background: #000000;
      image-rendering: pixelated;
      image-rendering: -moz-crisp-edges;
      image-rendering: crisp-edges;
    }

    #game-container canvas {
      display: block;
      image-rendering: pixelated;
      image-rendering: -moz-crisp-edges;
      image-rendering: crisp-edges;
    }

    h1 {
      margin-bottom: 20px;
      text-transform: uppercase;
      letter-spacing: 4px;
      font-size: 2.5rem;
      text-shadow: 
        0 0 10px #4ecdc4,
        0 0 20px #4ecdc4,
        2px 2px 0 #000;
      animation: glow 2s ease-in-out infinite alternate;
    }

    @keyframes glow {
      from {
        text-shadow: 
          0 0 10px #4ecdc4,
          0 0 20px #4ecdc4,
          2px 2px 0 #000;
      }
      to {
        text-shadow: 
          0 0 20px #4ecdc4,
          0 0 30px #4ecdc4,
          0 0 40px #45b7d1,
          2px 2px 0 #000;
      }
    }

    .info {
      margin-top: 20px;
      text-align: center;
      font-size: 0.9rem;
      color: #98d8c8;
      text-shadow: 1px 1px 0 #000;
      max-width: 600px;
      padding: 0 20px;
    }

    .retro-scanlines {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      background: repeating-linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.15),
        rgba(0, 0, 0, 0.15) 1px,
        transparent 1px,
        transparent 2px
      );
      z-index: 1000;
    }

    .loading {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 1.5rem;
      color: #4ecdc4;
      text-shadow: 0 0 10px #4ecdc4;
      animation: pulse 1.5s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
  </style>
</head>
<body>
  <div class="retro-scanlines"></div>
  <h1>◢ DEFENSE ZONE ◣</h1>
  <div id="game-container">
    <div class="loading">Loading Game...</div>
  </div>
  <div class="info">
    <p>Open multiple browser windows to test multiplayer!</p>
    <p>Use WASD or Arrow Keys to move your character</p>
  </div>

  <script>
    // Determine server URL based on environment
    const isDev = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
    const SERVER_URL = isDev 
      ? 'http://localhost:3000' 
      : window.location.origin;

    console.log('Connecting to server:', SERVER_URL);

    // Dynamically import the game module (client-side only)
    import('../game/main').then(({ startGame }) => {
      // Remove loading message
      const loading = document.querySelector('.loading');
      if (loading) loading.remove();
      
      // Start the game
      startGame('game-container', SERVER_URL);
    }).catch(error => {
      console.error('Failed to load game:', error);
      const loading = document.querySelector('.loading');
      if (loading) {
        loading.textContent = 'Failed to load game. Check console.';
        loading.style.color = '#ff6b6b';
      }
    });
  </script>
</body>
</html>
